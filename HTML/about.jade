		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		style()
			body {
				font-family: "HelveticaNeue-Light";
				font-size: 12px;
				line-height: 18px;
				margin: 0;
				padding: 0;
			}
			img { 
				display: block;
			}
			/** basic header/footer **/
			h1, footer {
				display: block;
				width: 100%;
				margin: 0;
				padding: 0;
				text-align: center;
			}
			h1 img, footer img {
				display: inline-block;
			}
			/** footer/header specific **/
			h1 {
				padding-top: 20px;
			}
			footer {
				padding-top: 20px;	
			}
			p {
				padding-left: 20px;
				padding-right: 20px;
			}
			a, a:visited, a:hover, a:active {
				color: #F15A29;
				text-decoration: none;
			}
